<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.darwindeveloper.horizontalscrollmenulibrary.custom_views.HorizontalScrollMenuView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menutxt"
        android:background="#d2d2d2"
        app:backgroundMenuColor="#d2d2d2"
        app:icon_height="30dp"
        app:icon_width="30dp"
        app:item_backgroundColor="#4B0082"
        app:item_colorSelected="@color/colorAccent"
        app:backgroundNotifications="@color/colorAccent"
        app:item_marginBottom="20dp"
        app:item_marginLeft="40dp"
        app:item_marginRight="40dp"
        app:item_marginTop="20dp"
        app:item_textColor="#fff"
        app:item_textSize="12sp">

    </com.darwindeveloper.horizontalscrollmenulibrary.custom_views.HorizontalScrollMenuView>

    <RelativeLayout
        android:id="@+id/buttonscontents"
        android:layout_marginTop="130dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/univll"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:background="#fff"
            android:layout_width="280dp"

            android:layout_height="40dp">

            <TextView

                android:id="@+id/univtext"
                android:text="University news"
                android:textColor="#FFAD2B"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/universityplus"
                 android:onClick="getUniversityNews"
                android:layout_marginLeft="88dp"
                android:src="@drawable/ic_plus_icon"
                android:background="#fff"
                android:layout_width="45dp"
                android:layout_height="40dp"
                />
        </LinearLayout>

        <WebView
            android:id="@+id/collegeweb"
            android:layout_marginTop="10dp"
            android:layout_below="@id/univll"
            android:layout_centerHorizontal="true"
            android:layout_width="280dp"
            android:layout_height="350dp">

        </WebView>






    </RelativeLayout>
</LinearLayout>